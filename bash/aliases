# global aliases
alias cls=clear
alias e=mate
alias l='ls -lh'
alias la='ls -a'
alias lh='ls -h1'
alias ll='ls -ahl'
alias zipr="zip -r"
alias rrc="source ~/.bashrc"

# finder
alias o="open . &"

# application aliases
alias mate="open -a TextMate"
alias e="open -a TextMate"
alias coda="open -a Coda"

# processes aliases
alias tu="top -o cpu" #top cpu
alias tm="top -o vsize" # top memory

# git aliases
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gl="git log"
alias gb="git branch"
alias gd="git difftool"
alias gco="git checkout"
function gg() {
	git commit -v -a -m "$*"
}

# interesting
alias whotunes="netstat | grep daap"

# ruby on rails aliases
alias ss="./script/server"




