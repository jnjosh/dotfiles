# global aliases
alias cls=clear
alias e=mate
alias l='ls -lh'
alias la='ls -a'
alias lh='ls -h1'
alias ll='ls -ahl'
alias zipr="zip -r"

# bash aliases
alias cdal="cd ~/bin/dotfiles"
alias rrc="source ~/.bashrc"
alias ea="mate -W ~/bin/dotfiles/bash/aliases && rrc"

# finder
alias o="open . &"

# application aliases
alias e="open -a TextMate"
alias coda="open -a Coda"

# processes aliases
alias tu="top -o cpu" #top cpu
alias tm="top -o vsize" # top memory

# git aliases
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gl="git log"
alias gb="git branch"
alias gd="git difftool"
alias gco="git checkout"
function gg() {
	git commit -v -a -m "$*"
}

# interesting
alias whotunes="netstat | grep daap"

# ruby on rails aliases
alias ss="./script/server"
alias sg="./script/generate"
alias sp="./script/plugin install"
alias sc="./script/console"
alias r="rake"
alias rmig="rake db:migrate"

# functions
function take {
	mkdir $1
	cd $1
}




